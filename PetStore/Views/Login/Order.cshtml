@{ViewBag.Title = "Order";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="header-position"></div>
<section id="userInfo">
    <div class="container">
        <div class="row">
            <div class="col-3">
                <div class="userInfo_cata">
                    <ul class="m-0">
                        <li><a href="ProfileCustomer">Thông tin tài khoản</a></li>
                        <li><a href="ChangePassCustomer">Đổi mật khẩu</a></li>
                        <li class="active"><a href="Order">Quản lý đơn hàng</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-9">
                <div class="userInfo_content">
                    <h2 class="text-left pl-0 pt-0">Thông tin</h2>
                    @using (Html.BeginForm("Order", "Login", FormMethod.Post, new { are = "" }))
                    {
                        <div class="col-12">
                            <!-- ORDERS TABLE -->
                            @{ var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN"); }
                            <div class="box">
                               
                                <div class="">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th scope="col">ID</th>
                                                <th  scope="col">Ngày Đặt</th>
                                                <th  scope="col">Giao hàng</th>
                                                <th  scope="col">Thanh Toán</th>
                                                <th scope="col">Tổng Tiền</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <th scope="row" >@item.Id</th>
                                                    <td>@item.OrderDate.ToString("dd/MM/yyyy")</td>

                                                    @{ if (item.OrderStatus == true)
                                                        {
                                                            <td class="order-status order-shipped">
                                                              Đã giao hàng 
                                                            </td>
                                                        }
                                                        else
                                                        {
                                                            <td class="order-status order-ready">
                                                                Đang giao hàng 
                                                            </td>
                                                        } }
                                                    @{ if (item.PaymentStatus == true)
                                                        {
                                                            <td class="payment-status payment-paid">
                                                                
                                                                 Đã thanh toán
                                                              
                                                            </td>
                                                        }
                                                        else
                                                        {
                                                            <td  class="payment-status payment-pending">
                                                           
                                                                  Chưa thanh toán
                                                              
                                                            </td>
                                                        } }

                                                    <td>@string.Format(info, "{0:0,0}", @item.Total)đ</td>
                                                 
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!-- END ORDERS TABLE -->
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>
