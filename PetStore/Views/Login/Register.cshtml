@model PetStore.Models.RegisterModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <link rel="icon" href="~/Content/Admin/img/logo-mb.png"
          type="image/x-icon">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap"
          rel="stylesheet" />
    <link rel="stylesheet"
          href="https://use.fontawesome.com/releases/v5.1.1/css/all.css"
          integrity="sha384-O8whS3fhG2OnA5Kas0Y9l3cfpmYjapjI0E4theH4iuMD+pLhbf6JI0jIMfYcK3yZ"
          crossorigin="anonymous" />
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
          integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="~/Content/Admin/css/login.css" />
</head>
<body>
    <div class="forny-container">
        <div class="forny-inner">
            <div></div>
            <div>
                <div class="forny-form">
                    <div class="mb-8 forny-logo text-center">
                        <img src="~/Content/Admin/img/logo-mb.png" />
                    </div>
                    <ul class="nav nav-tabs justify-content-center m-4" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link bg-transparent"
                               href="@Url.Action("Index","Login")"
                               data-toggle="tab"
                               role="tab"
                               aria-selected="false">
                                <span>Đăng Nhập</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link bg-transparent active"
                               href="#regiter"
                               data-toggle="tab"
                               role="tab"
                               aria-selected="true">
                                <span>Đăng Ký</span>
                            </a>
                        </li>
                    </ul>
                    @* FORM REGISTER *@
                    <div class="tab-content">
                        <div class="tab-pane fade show active" role="tabpanel" id="register">
                            @if(ViewBag.Success!=null)
                            {
                                <div class="text-success">@ViewBag.Success</div>
                            }
                            @using (Html.BeginForm("Register", "Login", FormMethod.Post))
                            {
                        <div class="form_control">
                            @Html.TextBoxFor(model => model.username, htmlAttributes: new { name = "username", type = "text", required = "required" })
                            @*<input required name="username" type="text" />*@
                            <label>Username</label>
                            @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                        </div>
                                <div class="form_control">
                                    @Html.TextBoxFor(model => model.name, htmlAttributes: new { name = "name", type = "text", required = "required" })
                                    @*<input required name="name" type="text" />*@
                                    <label>Họ và tên</label>
                                </div>
                                <div class="form_control">
                                    @Html.TextBoxFor(model => model.email, htmlAttributes: new { name = "email", type = "text", required = "required" })
                                    @*<input required name="email" type="email" />*@
                                    <label>Email</label>
                                </div>

                                <div class="form_control">
                                    @Html.TextBoxFor(model => model.password, htmlAttributes: new { name = "password", type = "password", required = "required" })
                                    @*<input required name="password" type="password" />*@
                                    <label>Password</label>
                                    @Html.ValidationMessageFor(model => model.password,"",new { @class = "text-danger"})
                                </div>
                                <div class="form_control">
                                    @Html.TextBoxFor(model => model.confirmpassword, htmlAttributes: new { name = "confirmpassword", type = "password", required = "required" })
                                    <label>Xác nhận Password</label>
                                    @Html.ValidationMessageFor(model => model.confirmpassword, "", new { @class = "text-danger" })
                                </div>

                                <div class="row">
                                    <div class="col-12">
                                        <button class="btn btn-primary btn-block">
                                            Đăng Ký
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- SCRIPT BOOTSTRAP  -->
    <script src="https://code.jquery.com/jquery-3.5.1.js "
            integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js "
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo "></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js "
            integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI "></script>
    <script>
        function bindPasswordReveal() {
            $('input[type="password"] + .input-group-append').each(function () {
                $(this).on("mousedown touchstart", function () {
                    $(this).prev().attr("type", "text");
                });
                $(this).on("mouseup touchend", function () {
                    $(this).prev().attr("type", "password");
                });
                $(this).on("mouseup touchend", function () {
                    $(this).prev().attr("type", "emmail");
                });
            });
        }
        window.addEventListener("load", function () {
            bindPasswordReveal();
        });
    </script>
</body>
</html>

