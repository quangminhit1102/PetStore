@model PagedList.IPagedList<Model.EF.Product>
@using PagedList.Mvc
@{
    ViewBag.Title = "ListProductByBrand";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="header-listproduct"
     style="background-image: url('/Content/Client/img/breadcumd.jpg')"></div>
<section id="list-product">
    <div class="container">
        <div class="row">
            <div class="col-3 pt-2">

                @Html.Action("AsideCategory", "Product")
                @Html.Action("AsidePost", "Product")

            </div>
            <div class="col-9">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="product-amount">
                        <h1><span style="font-weight: bold; color: black">THƯƠMG HIỆU @ViewBag.brand</span></h1>
                        <p>Hiển thị tất cả @Model.Count kết quả</p>
                    </div>
                    <div class="products-sort">
                        <div class="products-sort-item">
                            <ul class="nav nav-pills mb-3"
                                id="pills-tab"
                                role="tablist">
                                <li class="nav-item">
                                    <a onclick="switchSort()"
                                       class="nav-link"
                                       id="pills-grid-tab"
                                       data-toggle="pill"
                                       href="#sort-grid"
                                       role="tab"
                                       aria-controls="sort-grid"
                                       aria-selected="true">
                                        <i class="bx bx-grid-alt"></i>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a onclick="switchSort()"
                                       class="nav-link"
                                       id="pills-list-tab"
                                       data-toggle="pill"
                                       href="#sort-list"
                                       role="tab"
                                       aria-controls="sort-list"
                                       aria-selected="false">
                                        <i class="bx bx-list-ul"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade"
                         id="sort-grid"
                         role="tabpanel"
                         aria-labelledby="sort-grid-tab">
                        <div class="row">
                            @{
                                var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
                            }
                            @foreach (var item in Model)
                            {
                                <a href="/san-pham/@item.SiteTile-@item.Id" class="col-4 sort-grid-product">
                                    <img class="img-fluid"
                                         src="@item.ProductImages.FirstOrDefault().Image"
                                         alt=""
                                         srcset="" />
                                    <div class="products__rating">
                                        <i class="bx bxs-star"></i>
                                        <i class="bx bxs-star"></i>
                                        <i class="bx bxs-star"></i>
                                        <i class="bx bxs-star"></i>
                                        <i class="bx bxs-star-half"></i>
                                        <span>(1)</span>
                                    </div>
                                    <h5>
                                        @item.Name
                                    </h5>
                                    @if (@item.Price == null)
                                    {
                                        <span class="price"> @string.Format(info, "{0:0,0}", @item.ProductAttributes.FirstOrDefault().Price)đ</span>
                                    }
                                    else
                                    {
                                        <span class="price">@string.Format(info, "{0:0,0}", @item.Price)đ</span>
                                    }
                                </a>
                            }

                        </div>
                    </div>

                    <div class="tab-pane fade"
                         id="sort-list"
                         role="tabpanel"
                         aria-labelledby="sort-list-tab">
                        <div class="row">

                            @foreach (var item in Model)
                            {
                                <a href="/san-pham/@item.SiteTile-@item.Id" class="col-12 sort-list-product">
                                    <img class="img-fluid"
                                         src="@item.ProductImages.FirstOrDefault().Image"
                                         alt=""
                                         srcset="" />
                                    <div class="product-content">
                                        <div class="products__rating">
                                            <i class="bx bxs-star"></i>
                                            <i class="bx bxs-star"></i>
                                            <i class="bx bxs-star"></i>
                                            <i class="bx bxs-star"></i>
                                            <i class="bx bxs-star-half"></i>
                                            <span>(1)</span>
                                        </div>
                                        <h5>
                                            @item.Name
                                        </h5>

                                        @if (@item.Price == null)
                                        {
                                            <span class="price"> @string.Format(info, "{0:0,0}", @item.ProductAttributes.FirstOrDefault().Price)đ</span>
                                        }
                                        else
                                        {
                                            <span class="price">@string.Format(info, "{0:0,0}", @item.Price)đ</span>
                                        }

                                        <p>
                                            @item.Description
                                        </p>
                                    </div>
                                </a>
                            }


                        </div>
                    </div>
                </div>
                @Html.PagedListPager(Model, page => Url.Action("ListProductByBrand", new { page = page }))
            </div>
        </div>
    </div>
</section>
<script src="~/Content/Client/js/shoplist.js"></script>

