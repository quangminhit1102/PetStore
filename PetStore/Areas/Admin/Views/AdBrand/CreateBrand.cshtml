@model Model.EF.Brand
@{
    ViewBag.Title = "CreateBrand";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>Tạo mới thương hiệu</h2>
<div class="box">
    @using (Html.BeginForm("CreateBrand", "AdBrand", FormMethod.Post, new { @area = "Admin", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="col-6 col-sm-12">
            <a href="/admin/adbrand/index" class="btn btn-info" style="display:inline-block">
                Danh Sách thương hiệu
            </a>
        </div>
        <div class="col-6 col-sm-12">
            <div class="text-success" style="font-size:large">@ViewBag.success</div>
        </div>
        <div class="col-6 col-sm-12">
            <label>Tên thương hiệu</label>
            <div class="form_control">
                <input required
                       name="Name"
                       type="text" />
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-6 col-sm-12">
            <label>Quốc gia</label>
            <div class="form_control">
                <input required
                       name="Nation"
                       type="text" />
                @Html.ValidationMessageFor(model => model.Nation, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-6 col-sm-12">
            <label>Hình ảnh</label>
            <div class="form_control">
                <input required type="file" name="fileUpload" />
            </div>
        </div>
        <div class="col-12">
            <label>Mô tả</label>
            <div class="form_control">
                <textarea name="Description" rows="30">Nhập mô tả...</textarea>
            </div>
        </div>
        <div class="col-6 col-12">
            <a href="">
                <button class="btn btn-success" type="submit">Thêm mới thương hiệu</button>
            </a>
        </div>
    }
</div>
<script>tinymce.init({ selector: 'textarea' });</script>


