
@{
    ViewBag.Title = "changePass";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="box">
    <div class="row" id="user-profile">
        <div class="col-3 col-sm-12 user-avatar">
            <!--left col-->

            <img src="~/Content/Admin/img/user-image-2.png"
                 class="avatar"
                 alt="avatar" width="200px" />

            <h2>Xin chào @Model.Username</h2>
            @if (Model.Role == 1)
            {


                <h4>Quản trị viên</h4>
            }
            else if (Model.Role == 2)
            {
                <h4>Nhân viên Sale</h4>
            }
            else
            {
                <h4>Nhân viên Marketing</h4>
            }
        </div>
        <!--/col-3-->
        <div class="col-9 col-sm-12">
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link bg-transparent"
                       href="/admin/adminhome/profile"
                        <span>Thông tin</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link bg-transparent active"
                       href="/admin/adminhome/changepass"
                        <span>Đổi mật khẩu</span>
                    </a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade"
                     role="tabpanel"
                     id="doimatkhau">
                    <form>
                        <div class="row">
                            <div class="col-6 col-sm-12">
                                <div class="form_control">
                                    <input required name="oldPass" type="text" />
                                    <label>Mật khẩu cũ</label>
                                </div>
                            </div>
                            <div class="col-6 col-sm-12">
                                <div class="form_control">
                                    <input required name="newPass" type="text" />
                                    <label>Mật khẩu mới</label>
                                </div>
                            </div>
                            <div class="col-6 col-sm-12">
                                <div class="form_control">
                                    <input required name="confirmPass" type="text" />
                                    <label>Mật khẩu mới</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <button class="btn">Lưu lại</button>
                            </div>
                            <div class="col-6">
                                <button class="btn btn-reset">reset</button>
                            </div>
                        </div>
                    </form>
                </div>
                <!--/tab-pane-->
            </div>
            <!--/tab-content-->
        </div>
        <!--/col-9-->
    </div>
</div>

